        <activity android:name=".presentationlayer.controllers.activities.MainMenuActivity" />
        <activity android:name=".presentationlayer.controllers.activities.LoginActivity" />
        <activity android:name=".presentationlayer.controllers.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>