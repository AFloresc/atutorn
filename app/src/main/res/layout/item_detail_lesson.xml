<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg_detail_lesson"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_item_detail_content_title"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="1dp"
            android:layout_marginEnd="8dp"
            android:text="this is the title"
            android:textColor="@color/title_text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_lesson_description"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_detail_content_title"
            android:layout_alignStart="@+id/tv_item_detail_content_title"
            android:layout_marginStart="1dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="8dp"
            android:text="TextView fadffff fgffgkglfkdgk gdflkgdflkgkfd kljkjk jkljkjjkjkjkjkkkkjkj jkljjjjjkljljjj jkljj   jkkjkkjkjkklklj kjjljjlkjjljljjlkjlkjklj"
            android:textColor="@color/content_text_color" />

        <ImageView
            android:id="@+id/iv_item_content"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/tv_item_lesson_description"/>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>