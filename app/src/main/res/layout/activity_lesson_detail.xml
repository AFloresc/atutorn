<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentationlayer.controllers.activities.LessonDetailActivity"
    android:background="@drawable/library_transparente">

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="50dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:padding="1dp"
        android:src="@drawable/logoatutor3" />

        <TextView
            android:id="@+id/tv_detail_lesson_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/etail_lesson_title"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="1dp"
            />

        <TextView
            android:id="@+id/tv_detail_lesson_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tex1_help_lessons"
            android:layout_gravity="center_vertical|end"
            android:gravity="left"
            android:textSize="14sp"
            android:paddingTop="1dp"
            android:paddingLeft="20dp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/myRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@null"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>