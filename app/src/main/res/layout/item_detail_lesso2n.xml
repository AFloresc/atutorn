<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
                android:id="@+id/tv_item_detail_content_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginTop="1dp"
                android:text="this is the title"
                android:textColor="@color/title_text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                />

        <TextView
            android:id="@+id/tv_item_lesson_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_detail_content_title"
            android:layout_alignStart="@+id/tv_item_detail_content_title"
            android:layout_marginStart="1dp"
            android:lineSpacingExtra="4dp"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            android:layout_marginTop="1dp"
            android:text="TextView fadffff fgffgkglfkdgk gdflkgdflkgkfd kljkjk jkljkjjkjkjkjkkkkjkj jkljjjjjkljljjj jkljj   jkkjkkjkjkklklj kjjljjlkjjljljjlkjlkjklj"
            android:textColor="@color/content_text_color" />

        <ImageView

            android:id="@+id/iv_item_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/tv_item_lesson_description"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            />

        <Button
            android:id="@+id/bt_questionaty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_questionary"
            android:textColor="#bbbbbb"
            android:background="@drawable/background_bt"
            android:visibility="gone"/>


    </LinearLayout>


</android.support.v7.widget.CardView>